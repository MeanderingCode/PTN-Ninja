rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth.uid != null;
    }

    function isUser(uid) {
      return request.auth.uid == uid;
    }

		function isPlayer(gameID) {
    	return get(
        /databases/$(database)/documents/games/$(gameID)
      ).data.config.players.hasAny([null, request.auth.uid]);
    }

    match /users/{uid} {
      allow read, update: if isUser(uid);
      allow create: if isSignedIn();
    }

    match /names/{name} {
      allow update, delete: if isUser(name.uid);
    	allow read, create: if isSignedIn();
    }

    match /games/{gameID} {
    	allow read, create: if isSignedIn();
      allow write: if isPlayer(gameID);
      match /moves/{move} {
        allow read, create: if isSignedIn();
        allow write: if isPlayer(gameID);
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// app global css

@font-face
  font-family 'Source Code Pro'
  font-style normal
  font-weight 300
  src url('./fonts/Source+Code+Pro_300_normal.woff')

@font-face
  font-family 'Source Code Pro'
  font-style normal
  font-weight 400
  src url('./fonts/Source+Code+Pro_400_normal.woff')

@font-face
  font-family 'Source Code Pro'
  font-style normal
  font-weight 600
  src url('./fonts/Source+Code+Pro_600_normal.woff')

@font-face
  font-family 'Source Code Pro'
  font-style normal
  font-weight 700
  src url('./fonts/Source+Code+Pro_700_normal.woff')

.absolute-fit
  position absolute
  top 0
  bottom 0
  left 0
  right 0

.highlight
  background-color $highlight

.fullwidth-padded-md
  padding-left $space-base
  padding-right $space-base
  margin-left - $space-base
  margin-right - $space-base

.q-item.q-router-link--active, .q-item--active
  color $accent

.q-page-sticky
  z-index 1000

.q-dialog
  z-index 9998

.q-field__append
  align-self flex-end
  margin-right -7px
  padding-left 0

.q-message-text-content
  white-space pre-wrap

.q-menu
  user-select none
  z-index 9501

.q-notifications__list--top
  top $toolbar-min-height

.q-notification
  transition transform $generic-hover-transition,
    opacity $generic-hover-transition
  @media (min-width: $breakpoint-sm-min)
    &
      max-width 45vw

.q-slider__pin-value-marker-text
  color $secondary

.q-expansion-item--expanded > .q-expansion-item__container > .q-item
  color $accent

.footer-toolbar
  min-height 58px

.dimmed-btn
  opacity .25
  &:hover
    opacity 1

::-webkit-scrollbar
  width 8px
  height 8px
  background transparent
::-webkit-scrollbar-thumb
  border 0
  box-shadow none
  background $separator-color
  min-height 40px
  .q-card--dark &
    background $separator-dark-color
